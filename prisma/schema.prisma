// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(uuid())
  name               String
  email              String    @unique
  password           String
  phone              String
  created_at         DateTime  @default(now())
  updated_at         DateTime  @updatedAt
  UserRole           Role[]
  workouts           Workout[] @relation("ClientWorkouts")
  instructedWorkouts Workout[] @relation("InstructorWorkouts")

  @@map("users")
}

model Role {
  id    String @id @default(uuid())
  name  String @unique
  users User[]

  @@map("role")
}

enum RoleName {
  client
  instructor
  manager
}

model Workout {
  id                  String   @id @default(uuid())
  client_name         User     @relation("ClientWorkouts", fields: [clientId], references: [id])
  clientId            String
  instructor_name     User     @relation("InstructorWorkouts", fields: [instructorId], references: [id])
  instructorId        String
  title_workout       String
  description_workout String
  date                DateTime

  @@map("workouts")
}
